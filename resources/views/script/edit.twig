{% macro tree(data, route) %}
    <div class="row">
        {% for name, values in data %}
            {% if values is iterable %}
                <div class="col-lg-12 block">
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="#" class="editable" data-inputclass="input-lg" data-type="text" data-name="{{ route~'['~name~']' }}">{{ name }}</a>
                        </div>
                    </div>

                    <div class="row group">
                        <div class="col-lg-11 col-lg-offset-1">
                            {{ _self.tree(values, route~'['~name~']') }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-lg-12">
                    <div class="row group">
                        <div class="col-lg-3">
                            <a href="#" class="editable" data-type="text" data-name="{{ route~'['~name~'][key]' }}">{{ name }}</a>
                        </div>
                        <div class="col-lg-3 col-lg-offset-1">
                            <a href="#" class="editable" data-type="text" data-name="{{ route~'['~name~'][value]' }}">{{ values }}</a>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if loop.last %}
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-1">
                            <button type="button" class="btn btn-primary btn-xs">Add pair</button>
                        </div>

                        <div class="col-lg-1">
                            <button type="button" class="btn btn-success btn-xs">Add group</button>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endmacro tree %}