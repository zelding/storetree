{% extends 'layouts/storetree.twig' %}

{% block styleSheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-editable.css') }}">
{% endblock %}

{% block content %}
<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="page-header">
            <h1>
                Edit Scripts <sub>({{ item.id }})</sub>: <small>{{ item.name }}
                    <strong class="text-primary">aka</strong></small>
                <code>{{ item.base_class }}</code>
            </h1>
        </div>

        <ol class="breadcrumb">
            <li><a href="{{ route('storetree') }}">Home</a></li>
            <li><a href="{{ route('items.index') }}">Items</a></li>
            <li><a href="{{ route('items.show', {id: item.id}) }}">{{ item.name }}</a></li>
            <li class="active">Scripts</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">{{ dump(input) }}</div>
            <div class="col-lg-12">{{ dump(result) }}</div>
        </div>

        <form action="{{ route('items.update.scripts', {id: item.id}) }}" method="post">
            {% for script in item.scripts %}
                <div class="row">
                    <div class="col-lg-12">
                        <h3>{{ script.name }}</h3>
                    </div>

                    <div class="col-lg-12">
                        {{ _self.tree(script.data, 'scriptBlocks['~script.name~']') }}
                    </div>
                </div>

                <hr>
            {% endfor %}
            <button type="submit" class="btn btn-primary">ASD</button>
            {{ csrf_field() }}
        </form>
    </div>
</div>

<style>
    .row.group {
        margin-top: 5px;
        margin-bottom: 5px;
    }

    .block {
        /*border-bottom: 2px solid black;*/
        /*border-left: 2px solid black;*/
    }
</style>
{% endblock %}

{% block pageJs %}
    <script src="{{ asset('js/bootstrap-editable.min.js') }}" type="application/javascript"></script>
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $(function () {
            $.fn.editable.defaults.mode = 'inline';
            $.fn.editableform.buttons =
                '<button type="submit" class="btn btn-xs btn-primary editable-submit"><i class="fa fa-check"></i></button>' +
                '<button type="button" class="btn btn-xs btn-warning editable-cancel"><i class="fa fa-ban"></i></button>';
            $.fn.editableform.template =
                '<form class="form-inline editableform">' +
                    '<div class="control-group">' +
                        '<div>' +
                            '<div class="editable-input"></div>' +
                            '<div class="editable-buttons"></div>' +
                        '</div>' +
                        '<div class="editable-error-block"></div>' +
                    '</div>' +
                '</form>';

            $('.editable').editable();

            $('[data-toggle="tooltip"]').tooltip({
                html: true
            });
        });
    </script>
{% endblock %}
