{% extends 'layouts/storetree.twig' %}

{% block content %}
<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="page-header">
            <h1>
                Edit Scripts <sub>({{ item.id }})</sub>: <small>{{ item.name }}
                    <strong class="text-primary">aka</strong></small>
                <code>{{ item.base_class }}</code>
            </h1>
        </div>

        <ol class="breadcrumb">
            <li><a href="{{ route('storetree') }}">Home</a></li>
            <li><a href="{{ route('items.index') }}">Items</a></li>
            <li><a href="{{ route('items.show', {id: item.id}) }}">{{ item.name }}</a></li>
            <li class="active">Scripts</li>
        </ol>

        <div class="row">
            <div class="col-lg-12">{{ dump(input) }}</div>
            <div class="col-lg-12">{{ dump(result) }}</div>
        </div>

        <form action="{{ route('items.update.scripts', {id: item.id}) }}" method="post">
            {% for script in item.scripts %}
                <div class="row">
                    <div class="col-lg-12">
                        <h3>{{ script.name }}</h3>
                    </div>

                    <div class="col-lg-12">
                        {{ _self.tree(script.data, script.name) }}
                    </div>
                </div>

                <hr>
            {% endfor %}
            <button type="submit" class="btn btn-primary">ASD</button>
            {{ csrf_field() }}
        </form>
    </div>
</div>

    <style>
        .row.group {
            margin-top: 5px;
            margin-bottom: 5px;
        }
    </style>
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_minimal',
                radioClass: 'iradio_minimal',
                increaseArea: '20%'
            });

            $('[data-toggle="tooltip"]').tooltip({
                html: true
            });
        });
    </script>
{% endblock %}

{% macro tree(data, route) %}
    <div class="row">
        {% for name, values in data %}
            {% if values is iterable %}
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3">
                            <input class="form-control" type="text" value="{{ name }}" name="{{ route~'/'~name~'|value' }}">
                        </div>
                    </div>

                    <div class="row group">
                        <div class="col-lg-11 col-lg-offset-1">
                            {{ _self.tree(values, route~'/'~name ) }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-lg-12">
                    <div class="row group">
                        <div class="col-lg-3">
                            <input class="form-control" type="text" value="{{ name }}" name="{{ route~'/'~name~'|key' }}">
                        </div>
                        <div class="col-lg-3 col-lg-offset-1">
                            <input class="form-control" type="text" value="{{ values }}" name="{{ route~'/'~name~'|value' }}">
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endmacro tree %}