{% extends 'layouts/storetree.twig' %}

{% block content %}
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="page-header">
            <h1>Overview <small>where to, Sir?</small></h1>
        </div>

        <ol class="breadcrumb">
            <li class="active"><a href="#">Home</a></li>
        </ol>

        <div class="row">
            <div class="col-lg-2 col-md-offset-1">
                <div class="panel panel-default">
                    <div class="panel-heading">StoreTree overview</div>

                    <div class="panel-body">
                        <p>Currently there are</p>
                        <ul>
                            <li>Items: {{ numberOfItems }}</li>
                            <li>Shops: {{ numberOfShops }}</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Items overview</div>

                    <div class="panel-body">
                        <p>Currently there are</p>
                        <ul>
                            <li>Base items: {{ baseItems }}</li>
                            <li>Boss items: {{ bossItems }}</li>
                            <li>Recipes: {{ recipes }}</li>
                            <li>Consumables: {{ consumables }}</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Stats overview</div>

                    <div class="panel-body">
                        <p>Currently there are</p>
                        <ul>
                            <li>Stat types: {{ stats }}</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Abilities overview</div>

                    <div class="panel-body">
                        <p>Currently there are</p>
                        <ul>
                            <li>Abilities: {{ abilities }}</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="panel panel-default">
                    <div class="panel-heading">Translations overview</div>

                    <div class="panel-body">
                        <p>Currently there are</p>
                        <ul>
                            <li>
                                Item translations: {{ stats }}
                                <ul>
                                    {% for i, lang in languages %}
                                        <li>{{ lang.name }}: {{ lang.count }}</li>
                                    {% endfor %}
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{% endblock %}
