{% extends 'layouts/storetree.twig' %}

{% block content %}
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Add a new Items</div>

                        <div class="panel-body">
                            {% if errors|length %}
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="alert alert-danger" role="alert">
                                        <strong>Error</strong>
                                        <ul>
                                        {% for error in errors.all %}
                                            <li><span>{{ error }}</span></li>
                                        {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            {% include 'Item/form_new.twig' %}
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Search Items</div>

                        <div class="panel-body">

                            <div class="row">
                                <div class="col-lg-12">
                                    {% include 'Item/list.twig' with {items: items} %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {#<div class="col-lg-12">
                    <ul>
                        {% for item in items %}
                            {{ _self.item_components(item) }}
                        {% endfor %}
                    </ul>
                </div>#}
            </div>
        </div>
    </div>
    <!-- /#page-content--wrapper -->
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
{% endblock %}

{% macro item_components(item) %}
    <li>
        {% if item.is_base_item %}
            <strong>{{ item.name }}</strong>: {{ item.totalCost }} gold
        {% else %}
            {% set totalCost = item.cost ? item.totalCost~" ("~item.cost~")" : item.totalCost %}
            <strong>{{ item.name }}</strong>: {{ totalCost }} gold
            <ul>
                {% for component in item.components %}
                    {{ _self.item_components(component) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}
