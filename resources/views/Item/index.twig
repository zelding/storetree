{% extends 'layouts/storetree.twig' %}

{% block content %}
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Add a new Item</div>

                        <div class="panel-body">
                            {% if errors|length %}
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="alert alert-danger" role="alert">
                                        <strong>Error</strong>
                                        <ul>
                                        {% for error in errors.all %}
                                            <li><span>{{ error }}</span></li>
                                        {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            <form class="form-horizontal" action="{{ route('items.store') }}" method="post">
                                <div class="form-group">
                                    <label class="col-lg-1 control-label" for="item_name">Name</label>
                                    <div class="col-lg-2">
                                        <input type="text" class="form-control" id="item_name" placeholder="Facebreaker" name="name" value="{{ Request.name }}">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-1 control-label" for="item_cost">Cost</label>
                                    <div class="col-lg-2">
                                        <input type="number" class="form-control" id="item_cost" placeholder="100 000" name="cost">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-lg-1 control-label" for="item_desc">Description</label>
                                    <div class="col-lg-2">
                                        <textarea class="form-control" id="item_desc" placeholder="Breaks your face" name="description"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-1 col-sm-2">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="base_item" value="1"> Base item
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-1 col-sm-2">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="boss_item" value="1"> Boss item
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-1 col-sm-2">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="consumable_item" value="1"> Consumable item
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-1 col-sm-2">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="recipe_item" value="1"> Recipe item
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-default">Add item</button>

                                {{ csrf_field() }}
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12">
                    <ul>
                        {% for item in items %}
                            {{ _self.item_components(item) }}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content--wrapper -->
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
{% endblock %}

{% macro item_components(item) %}
    <li>
        {% if item.is_base_item %}
            <strong>{{ item.name }}</strong>: {{ item.totalCost }} gold
        {% else %}
            {% set totalCost = item.cost ? item.totalCost~" ("~item.cost~")" : item.totalCost %}
            <strong>{{ item.name }}</strong>: {{ totalCost }} gold
            <ul>
                {% for component in item.components %}
                    {{ _self.item_components(component) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}
