<form class="form-horizontal" action="{{ route('items.store') }}" method="post">
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label class="col-lg-4 control-label" for="item_name">Name</label>
                <div class="col-lg-8">
                    <input type="text" class="form-control" id="item_name" placeholder="Facebreaker" name="name" value="{{ Request.name }}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-4 control-label" for="item_cost">Cost</label>
                <div class="col-lg-8">
                    <input type="number" class="form-control" id="item_cost" placeholder="100 000" name="cost">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-4" for="item_shop">Shops</label>
                <div class="col-lg-8">
                    <select id="item_shop" name="item_shops[]" multiple class="form-control">
                        {% for shop in shops %}
                            <option value="{{ shop.id }}">{{ shop.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="form-group">
                <label class="col-lg-4 control-label" for="item_desc">Description</label>
                <div class="col-lg-8">
                    <textarea class="form-control" rows="4" id="item_desc" placeholder="Breaks your face" name="description"></textarea>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="form-group">
                <div class="col-lg-offset-1 col-sm-8">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="base_item" value="1"> Base item
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1 col-sm-8">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="boss_item" value="1"> Boss item
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1 col-sm-8">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="consumable_item" value="1"> Consumable item
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1 col-sm-8">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="recipe_item" value="1"> Recipe item
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-default">Add item</button>

    {{ csrf_field() }}
</form>
