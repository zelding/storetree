{% extends 'layouts/layout.twig' %}

{% set hasSideBar = true %}

{% block sidebar %}
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">StoreTree</a>
            </li>

            <li class="{{ Route.currentRouteName == 'storetree' ? 'active' : '' }}">
                <a href="{{ route('storetree') }}">Overview</a>
            </li>

            <li class="{{ Route.currentRouteName == 'items.index' ? 'active' : '' }}">
                <a href="{{ route('items.index') }}">Items</a>
            </li>

            <li class="{{ Route.currentRouteName == 'shops.index' ? 'active' : '' }}">
                <a href="{{ route('shops.index') }}">Stores</a>
            </li>

            <li>
                <a href="#">Builds</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
{% endblock %}