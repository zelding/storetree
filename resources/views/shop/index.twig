{% extends 'layouts/storetree.twig' %}

{% block content %}
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="page-header">
                <h1>Shops <small>list, create, add, modify, update</small></h1>
            </div>

            <ol class="breadcrumb">
                <li><a href="{{ route('storetree') }}">Home</a></li>
                <li class="active">Shops</li>
            </ol>

            <div class="row">
                <div class="col-lg-12">
                    <table class="dataTable table table-hover table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Items</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for shop in shops %}
                                <tr>
                                    <td>{{ shop.id }}</td>
                                    <td>{{ shop.name }}</td>
                                    <td>{{ shop.items.count }}</td>
                                    <td>&nbsp;</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>

{% endblock %}