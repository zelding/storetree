    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label class="col-lg-4 control-label" for="stat_name">Name</label>
                <div class="col-lg-8">
                    <input type="text" class="form-control" id="stat_name"
                           placeholder="Bonus true damage" name="name"
                           value="{{ request.name ?? stat.name }}">
                </div>
            </div>

            <div class="form-group">
                <label class="col-lg-4 control-label" for="stat_dota_name">Dota class name</label>
                <div class="col-lg-8">
                    <input type="text" class="form-control" id="stat_dota_name"
                           placeholder="bonus_true_damage" name="dota_name"
                           value="{{ request.dota_name ?? stat.dota_name }}">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-lg-4" for="stat_var_type">Value type</label>
                <div class="col-lg-8">
                    <select id="stat_var_type" name="var_type" class="form-control">
                        {% for type in varTypes %}
                            {% set selected = (request.var_type ?? stat.var_type) == type ? ' selected' : '' %}
                            <option value="{{ type }}"{{ selected }}>{{ type }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="form-group">
                <label class="col-lg-4 control-label" for="stat-group">Groupname</label>
                <div class="col-lg-8">
                    <input type="text" class="form-control" id="stat-group"
                           placeholder="bash" name="stat_group"
                           value="{{ request.stat_group ?? stat.stat_group }}">
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-1 col-sm-8">
                    <div class="checkbox">
                        <label data-toggle="tooltip" title="If true, an % wil be added to the stats description">
                            <input type="checkbox" name="is_percent"
                                   value="1" {{ (request.is_percent ?? item.is_percent) ? 'checked="checked"' }}> Percent
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>