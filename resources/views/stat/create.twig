{% extends 'layouts/storetree.twig' %}

{% block content %}
    <!-- Page Content -->

    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="page-header">
                <h1>Create a new Stat <small>you can set atach it to Items later</small></h1>
            </div>

            <ol class="breadcrumb">
                <li><a href="{{ route('storetree') }}">Home</a></li>
                <li><a href="{{ route('stats.index') }}">Stats</a></li>
                <li class="active">Create new</li>
            </ol>

            <div class="row">

                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">Add a new Stat</div>

                        <div class="panel-body">
                            {% if errors|length %}
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="alert alert-danger" role="alert">
                                            <strong>Error</strong>
                                            <ul>
                                                {% for error in errors.all %}
                                                    <li><span>{{ error }}</span></li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            <form class="form-horizontal" action="{{ route('stats.store') }}" method="post">
                                {% include 'stat/form_edit.twig' %}

                                <button type="submit" class="btn btn-primary">Add stat</button>
                                {{ csrf_field() }}
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}