{% extends 'layouts/storetree.twig' %}

{% block content %}
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="page-header">
                <h1>Import
                    <small>want some data?</small>
                </h1>
            </div>

            <ol class="breadcrumb">
                <li>
                    <a href="{{ route('storetree') }}">Home</a>
                </li>
                <li class="active">Import</li>
            </ol>

            <div class="row">
                <div class="col-lg-6 col-sm-6 col-xs-12">
                    <form enctype="multipart/form-data" method="post">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="exampleInputFile">File input</label>
                                    <input type="file" id="exampleInputFile" name="uploadedFile[]" multiple="multiple" />
                                    <p class="help-block">Example block-level help text here.</p>
                                </div>
                            </div>
                        </div>

                        <button type="submit">Upload</button>

                        {{ csrf_field() }}
                    </form>
                </div>

                <div class="col-lg-6 col-sm-6 col-xs-12">

                    <ul>
                        {% for file in files %}
                            <li><a>{{ file }}</a></li>
                        {% endfor %}
                    </ul>

                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    <form>
                        <textarea title="kv-string" class="form-control" name="kvString"></textarea>

                        {{ csrf_field() }}

                        <button type="submit">Send</button>
                    </form>
                </div>
            </div>

            <hr>
            {{ dump(kvData) }}
            <hr>
            {{ dump(grouped) }}
            <hr>
            {{ dump(parsed) }}
            <hr>
            {{ dump(counts) }}
        </div>
    </div>
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $(function () {
        });
    </script>
{% endblock %}

