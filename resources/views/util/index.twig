{% extends 'layouts/storetree.twig' %}

{% block content %}
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="page-header">
                <h1>Miscellaneous data and info <small>might help you?</small></h1>
            </div>

            <ol class="breadcrumb">
                <li><a href="{{ route('storetree') }}">Home</a></li>
                <li class="active">Utils</li>
            </ol>

            <div class="row">
                <div class="col-lg-12">
                    <h4>Free dota ID's in <code>2000..4000</code> range</h4>
                    {% spaceless %}
                        {% for range in freeIDs %}
                            <span class="range">
                                {% if range|length < 2 %}
                                    {{ range|first }}
                                {% else %}
                                    {{ range|first }}&hellip;{{ range|last }}
                                {% endif %}
                            </span>
                            {% if not loop.last %}
                                {{ '|&nbsp;' }}
                            {% endif %}
                        {% endfor %}
                    {% endspaceless %}
                </div>
            </div>
        </div>
    </div>

    <style type="text/css">
        .range {
            font-size: 2rem;
        }
    </style>
{% endblock %}

{% block inlineJs %}
    <script type="application/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip({
                html: true
            });

            $('.select2').select2({
                theme: "bootstrap",
                width: '100%'
            });

            $('input').iCheck({
                checkboxClass: 'icheckbox_minimal',
                radioClass: 'iradio_minimal',
                //increaseArea: '20%'
            });
        });
    </script>
{% endblock %}
