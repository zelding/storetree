{% extends 'layouts/storetree.twig' %}

{% block content %}
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="page-header">
                <h1>Builds <small>list, create, add, modify, update</small></h1>
            </div>

            <ol class="breadcrumb">
                <li><a href="{{ route('storetree') }}">Home</a></li>
                <li class="active">Builds</li>
            </ol>

            <div class="row">
                <div class="col-lg-12">
                    {% for item in items %}
                        <button class="btn btn-sm btn-default itemButton"
                                data-item-id="{{ item.id }}"
                                data-toggle="button"
                                aria-pressed="false"
                                autocomplete="off">
                            {{ item.name }}
                        </button>
                    {% endfor %}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div id="build-container">

                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        #build-container {
            height: 600px;
            position: relative;
            border: 1px solid black;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block pageJs %}
    <script type="application/javascript">
        let $btn = $('.itemButton');

        $btn.on('click', function (event){
            event.preventDefault();
            event.stopPropagation();
        });
    </script>
{% endblock %}