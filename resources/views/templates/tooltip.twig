// Item tooltip: {{ item.base_class }}
//======================================================================================================================
"DOTA_Tooltip_Ability_{{ item.base_class }}"                "{{ item.getSelectedLocaleAttribute(locale_id).name ?? item.name }}"
"DOTA_Tooltip_ability_{{ item.base_class }}_Description"    "{{ item.getSelectedLocaleAttribute(locale_id).printableDesc ?? item.printableDesc }}"
{% if item.getSelectedLocaleAttribute(locale_id).lore -%}
"DOTA_Tooltip_ability_{{ item.base_class }}_Lore"           "{{ item.getSelectedLocaleAttribute(locale_id).lore }}"
{%- endif %}

{% if item.getSelectedLocaleAttribute(locale_id).note -%}
"DOTA_Tooltip_Ability_{{ item.base_class }}_Note0"          "{{ item.getSelectedLocaleAttribute(locale_id).note }}"
{%- endif %}

{% for stat in item.stats %}

{%- set text_id = "DOTA_Tooltip_ability_"~item.base_class~"_"~stat.dota_name %}
"{{ text_id }}"{{ generateSpaces(text_id, 80) }}"{{ stat.varString }}"
{% endfor %}